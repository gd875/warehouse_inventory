<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@warehouse.name%></h1>

<h3>(<%=@warehouse.location%>)</h3>

<a href="/dashboard">Dashboard</a>

<h2>Inventory</h2>

<p><a href="/inventory/<%=@warehouse_id%>/new">Add Inventory</a></p>

<p><a href="/transfers/<%=@warehouse_id%>/new">Transfer Inventory</a></p>

<%@inventory.each do |inventory|%>

    <p><b><%=inventory.name%></b></p>
    <p>Pallets: <%=inventory.pallet_count%></p>

    <%end%>

<a href="/warehouses/new">Create New Warehouse</a>
<br>
<p><a href="/warehouses/<%=@warehouse_id%>/edit">Edit Warehouse</a></p>
<br></br>
<form action="/warehouses/<%=@warehouse_id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Warehouse">
</form>

